{{#if siteSettings.Enable_Karma_plugin}}
  <div id="__karma-stats-summary">
    <input hidden id="__dao-username" readonly />
    <div class="__wrapper">
      <div style="display:flex;align-items:center;margin:10px 0;">
        {{#if siteSettings.Show_Karma_logo}}
          <a
            alt="Show Karma App"
            href="https://showkarma.xyz"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src="https://www.showkarma.xyz/icons/karma-logo.svg"
              height="28"
              width="28"
            />
          </a>
        {{/if}}
        <b>
          Governance Stats
        </b>
      </div>
      <div class="__loading" style="display:none;">
        Loading governance stats from Karma
      </div>
      {{#if siteSettings.User_not_found_message}}
        <div class="__has-error" style="display:none;">
          {{html-safe siteSettings.User_not_found_message}}
        </div>
      {{/if}}
      <div class="__has-score" style="display:none;">
        <ul>
          {{#if siteSettings.Show_Karma_score}}
            <li>
              <span class="value">
                <span id="__dao-exp" class="number">
                  0
                </span>
              </span>

              <span class="label">
                Karma score
              </span>
            </li>
          {{/if}}
          {{#if siteSettings.Show_health_score}}
            <li>
              <span class="value">
                <span id="__health-score" class="number">
                  0
                </span>
              </span>

              <span class="label">
                Health score
              </span>
            </li>
          {{/if}}
          {{#if siteSettings.Show_delegated_votes}}
            <li>
              <span class="value">
                <span id="__delegated-votes" class="number">
                  0
                </span>
              </span>

              <span class="label">
                Delegated votes
              </span>
            </li>
          {{/if}}
          {{#if siteSettings.Show_snapshot_votes}}
            <li>
              <span class="value">
                <span id="__snapshot-voting-stats" class="number">
                  0%
                </span>
              </span>

              <span class="label">
                Snapshot voting
              </span>
            </li>
          {{/if}}
          {{#if siteSettings.Show_on_chain_votes}}
            <li>
              <span class="value">
                <span id="__on-chain-voting-stats" class="number">
                  0%
                </span>
              </span>

              <span class="label">
                On-chain voting
              </span>
            </li>
          {{/if}}
        </ul>
      </div>
      {{#if (gt siteSettings.Show_voting_history 0)}}
        <div id="__karma-voting-wrapper" style="display:none">
          <div style="display:flex;align-items:center;margin:10px 0;">
            {{#if siteSettings.Show_Karma_logo}}
              <a
                alt="Show Karma App"
                href={{
                  concat
                  "https://showkarma.xyz/profile/"
                  this.currentUser.username
                }}
                target="_blank"
                rel="noopener noreferrer"
              >
                <img
                  src="https://www.showkarma.xyz/icons/karma-logo.svg"
                  height="28"
                  width="28"
                />
              </a>
            {{/if}}
            <b>
              Voting History
            </b>
            <br />
          </div>
          <small class="text-disabled">
            Showing latest
            {{siteSettings.Show_voting_history}}
            votes
          </small>
          <div id="__karma-voting-history" class="w-full profile">
            <div class="loading">
              Loading voting history
            </div>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
{{/if}}